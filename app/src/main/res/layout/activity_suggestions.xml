<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_color"
    tools:context=".Suggestions">

    <TableRow
        android:background="@color/purple_200"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Electricity bills can be reduced"
            android:background="@color/purple_200"
            android:layout_margin="1dp"
            android:layout_column="0"
            android:textStyle="bold"
            android:gravity="center"
            />
    </TableRow>
    <TableRow
        android:background="@color/purple_200"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Education Expenses can be increased"
            android:background="@color/purple_200"
            android:layout_margin="0dp"
            android:layout_column="0"
            android:textStyle="bold"
            android:gravity="center"
            />
    </TableRow>
    <TableRow
        android:background="@color/purple_200"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Internet Bills should be reduced"
            android:background="@color/purple_200"
            android:layout_margin="0dp"
            android:layout_column="0"
            android:textStyle="bold"
            android:gravity="center"
            />
    </TableRow>


    <TableRow
        android:background="@color/purple_200"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Medical bills can be increased"
            android:background="@color/purple_200"
            android:layout_margin="0dp"
            android:layout_column="0"
            android:textStyle="bold"
            android:gravity="center"
            />
    </TableRow>
    <TableRow
        android:background="@color/purple_200"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_margin="1dp"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Savings can be increased"
            android:background="@color/purple_200"
            android:layout_margin="0dp"
            android:layout_column="0"
            android:textStyle="bold"
            android:gravity="center"
            />
    </TableRow>

    <Button
        android:id="@+id/btn_sug_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="70dp"
        android:text="back" />
</TableLayout>